{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "assemble",
      "type": "shell",
      "command": "ca65 -g -l build/main.lst -o build/main.o src/main.s",
      "problemMatcher": []
    },
    {
      "label": "link",
      "type": "shell",
      "command": "ld65 -C cfg/rom_32k_at_8000.cfg -o build/rom.bin build/main.o -m build/rom.map -Ln build/labels.lbl --dbgfile build/rom.dbg",
      "problemMatcher": [],
      "dependsOn": ["assemble"]
    },
    {
      "label": "build",
      "type": "shell",
      "command": "true",
      "dependsOn": ["link"],
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm -f build/*"
    }
  ]
}
